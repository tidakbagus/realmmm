<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RealmDB CRUD Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Add Person -->
    <Button
        android:id="@+id/add_person_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Person"
        android:layout_marginBottom="8dp" />

    <!-- View All Persons -->
    <Button
        android:id="@+id/view_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Persons"
        android:layout_marginBottom="8dp" />

    <!-- Update Person -->
    <Button
        android:id="@+id/update_person_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Person"
        android:layout_marginBottom="8dp" />

    <!-- Delete Person -->
    <Button
        android:id="@+id/delete_person_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Person"
        android:layout_marginBottom="8dp" />

    <!-- Log Output Placeholder -->
    <TextView
        android:id="@+id/log_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:text="Logs will appear here..."
        android:textSize="14sp" />

</LinearLayout>
